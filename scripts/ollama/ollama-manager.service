[Unit]
Description=Ollama Model Manager - Auto-unload inactive models
After=network.target

[Service]
Type=simple
User=%i
WorkingDirectory=/home/ormastes/dev/aidev
ExecStart=/usr/bin/python3 /home/ormastes/dev/aidev/ollama_manager.py --monitor --timeout 60
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target