{
  "name": "@llm-agent/epic",
  "version": "1.0.0",
  "description": "LLM Agent Epic - Unified AI agent infrastructure",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "setup": "./init/setup/install-all.sh",
    "build": "tsc",
    "build:all": "./init/setup/build-all.sh",
    "dev": "tsc --watch",
    "test": "jest",
    "test:all": "npm run test && npm run test:themes",
