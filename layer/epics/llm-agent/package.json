  },
  "workspaces": [
    "./init/types",
    "../../themes/llm-agent_*"
  ],
  "dependencies": {
    "dotenv": "^16.3.1",
    "eventemitter3": "^5.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "llm",
    "agent",
    "ai",
    "claude",
    "ollama",
    "vllm",
    "mcp"
