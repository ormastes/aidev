{
  "name": "@aidev/portal-aiide",
  "version": "1.0.0",
  "description": "AI Integrated Development Environment - Web-based AI-powered development environment",
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "server": "tsx server/index.ts",
    "server:watch": "tsx watch server/index.ts",
    "start": "./scripts/launch-aiide.sh",
    "start:prod": "NODE_ENV=production node server/index.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:system": "playwright test",
    "test:e2e": "playwright test tests/system",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"children/**/*.{ts,tsx,css,md}\"",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t aiide:latest .",
    "docker:run": "docker run -p 3457:3457 -p 5173:5173 --env-file .env aiide:latest",
    "clean": "rm -rf dist node_modules .parcel-cache",
    "analyze": "vite build --mode analyze"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "@monaco-editor/react": "^4.6.0",
    "antd": "^5.12.0",
    "@ant-design/icons": "^5.2.6",
    "socket.io-client": "^4.7.2",
    "socket.io": "^4.7.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "chokidar": "^3.5.3",
    "axios": "^1.6.2",
    "zustand": "^4.4.7",
    "@devbookhq/splitter": "^1.4.2",
    "react-hotkeys-hook": "^4.4.1",
    "react-markdown": "^9.0.1",
    "prismjs": "^1.29.0",
    "@anthropic-ai/sdk": "^0.20.0",
    "openai": "^4.24.0",
    "uuid": "^9.0.1",
    "lodash": "^4.17.21",
    "dayjs": "^1.11.10",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0",
    "xterm-addon-search": "^0.13.0",
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/node": "^20.10.4",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/lodash": "^4.14.202",
    "@types/uuid": "^9.0.7",
    "@types/prismjs": "^1.26.3",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "tsx": "^4.6.2",
    "vite": "^5.0.8",
    "jest": "^29.7.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@playwright/test": "^1.40.1",
    "prettier": "^3.1.1"
  }
}