{
  "name": "circular-dependency-detection",
  "version": "1.0.0",
  "description": "Comprehensive circular dependency detection system for TypeScript, C++, and Python",
  "main": "dist/index.js",
  "bin": {
    "circle-deps": "./dist/cli/index.js",
    "cd-analyze": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/cli/index.js",
    "test": "jest",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration",
    "test:system": "jest tests/system",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:system",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist coverage",
    "dev": "tsc --watch",
    "cli": "npm run build && node dist/cli/index.js",
    "install-tools": "./scripts/install-tools.sh",
    "demo": "./scripts/run-demo.sh",
    "ci": "./scripts/ci-check.sh"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^6.5.0",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "d3-graphviz": "^5.0.2",
    "dependency-cruiser": "^13.1.5",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.3",
    "graphlib": "^2.1.8",
    "lodash": "^4.17.21",
    "madge": "^6.1.0",
    "ora": "^5.4.1",
    "typescript": "^5.1.6",
    "yaml": "^2.3.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/graphlib": "^2.1.12",
    "@types/jest": "^29.5.4",
    "@types/lodash": "^4.14.197",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "eslint": "^8.48.0",
    "jest": "^29.6.2",
    "prettier": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  },
  "peerDependenciesInfo": {
    "note": "External tools required: pylint (>=2.17.0), clang-tidy (>=14.0.0), graphviz"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "circular-dependencies",
    "static-analysis",
    "typescript",
    "cpp",
    "python",
    "code-quality",
    "dependency-analysis",
    "graph-analysis"
  ],
  "author": "AI Development Platform",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ai-dev-platform/circular-dependency-detection.git"
  },
  "bugs": {
    "url": "https://github.com/ai-dev-platform/circular-dependency-detection/issues"
  },
  "homepage": "https://github.com/ai-dev-platform/circular-dependency-detection#readme"
}
