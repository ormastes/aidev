{
  "name": "@aidev/hea-architecture",
  "version": "1.0.0",
  "description": "Hierarchical Encapsulation Architecture implementation for AI Development Platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist coverage .tsbuildinfo",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "hea:scaffold": "ts-node scripts/scaffold.ts",
    "hea:validate": "ts-node scripts/validate.ts",
    "hea:graph": "ts-node scripts/dependency-graph.ts",
    "hea:check": "ts-node scripts/check-boundaries.ts",
    "hea:migrate": "ts-node scripts/migrate.ts",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "architecture",
    "hea",
    "hierarchical",
    "encapsulation",
    "layers",
    "aidev"
  ],
  "author": "AI Development Platform Team",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "graphviz": "^0.0.9",
    "inquirer": "^8.2.6",
    "madge": "^6.1.0",
    "ora": "^5.4.1",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/madge": "^5.0.3",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "files": [
    "dist",
    "scripts/scaffold.ts",
    "scripts/validate.ts",
    "docs",
    "examples",
    "README.md"
