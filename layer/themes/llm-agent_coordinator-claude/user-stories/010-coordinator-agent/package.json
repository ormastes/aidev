{
  "name": "@aidev/coordinator-claude-agent",
  "version": "1.0.0",
  "description": "Coordinator agent for Claude API with advanced session management",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "coordinator-claude": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:external": "jest tests/external",
    "test:system": "jest tests/system",
    "test:system:playwright": "playwright test",
    "test:env": "jest tests/env",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "lint": "eslint src tests --ext .ts",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "keywords": [
    "claude",
    "ai",
    "coordinator",
    "agent",
    "session-management",
    "streaming"
  ],
  "author": "AI Development Platform Team",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.0.0",
    "dotenv": "^16.6.1",
    "events": "^3.3.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.0",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.1.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aidev-platform/coordinator-claude-agent.git"
  },
  "bugs": {
    "url": "https://github.com/aidev-platform/coordinator-claude-agent/issues"
  },
  "homepage": "https://github.com/aidev-platform/coordinator-claude-agent#readme"
}
