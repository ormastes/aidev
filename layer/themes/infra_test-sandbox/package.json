{
  "name": "@aidev/test-sandbox",
  "version": "1.0.0",
  "description": "Virtual environment sandboxing for dangerous system tests",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "setup": "./scripts/setup-sandbox.sh",
    "test": "playwright test",
    "test:sandbox": "playwright test --config=playwright.sandbox.config.ts",
    "test:docker": "TEST_SANDBOX=docker playwright test",
    "test:qemu": "TEST_SANDBOX=qemu playwright test",
    "build": "tsc",
    "clean": "rm -rf dist gen/test-sandbox"
  },
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "dockerode": "^4.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "test",
    "sandbox",
    "docker",
    "qemu",
    "virtualization",
    "security"
  ],
  "author": "AI Development Platform",
  "license": "MIT"
}