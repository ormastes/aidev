{
  "name": "@llm-agent/mcp",
  "version": "2.0.0",
  "type": "module",
  "description": "Unified Model Context Protocol for LLM agents",
  "main": "gen/dist/index.js",
  "types": "gen/dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "bun run --watch src/index.ts",
    "test": "bun test",
    "test:jest": "jest",
    "test:unit": "bun test --testNamePattern=unit",
    "test:integration": "bun test --testNamePattern=integration",
    "test:system": "bun test --testNamePattern=system",
    "start": "bun run src/index.ts",
    "start:node": "node gen/dist/index.js",
    "clean": "rm -rf gen/dist dist"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.2",
