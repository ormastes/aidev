{
  "name": "@aidev/chat-space",
  "version": "1.0.0",
  "description": "Chat room platform and messaging theme with MCP integration",
  "main": "gen/dist/index.js",
  "types": "gen/dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node gen/dist/index.js",
    "dev": "ts-node src/index.ts",
    "start:mcp": "ts-node src/index.ts --mcp-url ws://localhost:8080",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testMatch='**/tests/unit/**/*.test.ts'",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.itest.ts'",
    "test:system": "jest --testMatch='**/tests/system/**/*.stest.ts'"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.5",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "commander": "^11.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "socket.io": "^4.5.4",
    "socket.io-client": "^4.5.4",
    "uuid": "^9.0.0",
    "ws": "^8.14.2"
  }
}
