# Server Configuration
NODE_ENV=development
PORT=3303

# Security
JWT_SECRET=your-secret-key-change-in-production
BCRYPT_ROUNDS=10

# Database
DATABASE_PATH=:memory:
# For production use: DATABASE_PATH=./data/mate-dealer.db

# CORS
ALLOWED_ORIGINS=http://localhost:3304,http://localhost:3303

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# External Logging
ENABLE_EXTERNAL_LOGGING=false
LOG_ENDPOINT=http://localhost:3402/api/logs

# GUI Selector Integration
GUI_SELECTOR_URL=http://localhost:3456

# API Configuration
API_TIMEOUT=30000

# Session Configuration
SESSION_DURATION=15m
REFRESH_TOKEN_DURATION=7d