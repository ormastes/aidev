{
  "id": "default",
  "name": "Default Chat Room",
  "description": "General purpose chat room with Claude assistant",
  "server": {
    "port": 3000,
    "maxClients": 50,
    "historySize": 100
  },
  "coordinator": {
    "type": "claude",
    "name": "Claude",
    "enabled": true,
    "config": {
      "model": "claude-3-haiku-20240307",
      "temperature": 0.7,
      "maxTokens": 1000
    },
    "behavior": {
      "respondToMentions": true,
      "respondToQuestions": true,
      "showTypingIndicator": true,
      "enabledActions": ["help", "summarize", "explain"]
    },
    "auth": {
      "method": "local_shared",
      "apiKeySource": "shared_local"
    }
  },
  "client": {
    "autoReconnect": true,
    "reconnectDelay": 1000
  },
  "rules": {
    "allowGuests": true,
    "maxMessageLength": 2000,
    "rateLimit": {
      "messages": 10,
      "window": 60
    }
  }
}