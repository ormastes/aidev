{
  "name": "@aidev/pocketflow",
  "version": "1.0.0",
  "description": "Workflow automation and task management theme - Direct root connection",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coverage:root": "jest --coverage && npm run copy-coverage",
    "copy-coverage": "mkdir -p ../../../gen/coverage/themes && cp -r coverage/* ../../../gen/coverage/themes/pocketflow/",
    "test:watch": "jest --watch",
    "test:unit": "jest --testMatch='**/tests/unit/**/*.test.ts'",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.itest.ts'",
    "test:system": "jest --testMatch='**/tests/system/**/*.stest.ts'"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  }
}