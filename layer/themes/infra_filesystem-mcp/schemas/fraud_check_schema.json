{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Fraud Check Schema",
  "description": "Schema for fraud detection analysis results",
  "allOf": [
    { "$ref": "check_result_schema.json" }
  ],
  "properties": {
    "results": {
      "type": "object",
      "properties": {
        "mockDetection": {
          "type": "object",
          "properties": {
            "totalMocks": { "type": "integer" },
            "severity": { "type": "string" },
            "violations": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "file": { "type": "string" },
                  "line": { "type": "integer" },
                  "type": { "type": "string" },
                  "reason": { "type": "string" }
                }
              }
            }
          }
        },
        "testCoverageFraud": {
          "type": "object",
          "properties": {
            "fakeTests": { "type": "integer" },
            "emptyTests": { "type": "integer" },
            "severity": { "type": "string" },
            "violations": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "file": { "type": "string" },
                  "testName": { "type": "string" },
                  "type": { "type": "string" },
                  "reason": { "type": "string" }
                }
              }
            }
          }
        },
        "dependencyFraud": {
          "type": "object",
          "properties": {
            "unusedDependencies": { "type": "integer" },
            "suspiciousDependencies": { "type": "integer" },
            "severity": { "type": "string" },
            "violations": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "dependency": { "type": "string" },
                  "type": { "type": "string" },
                  "reason": { "type": "string" }
                }
              }
            }
          }
        },
        "codeSmells": {
          "type": "object",
          "properties": {
            "totalSmells": { "type": "integer" },
            "criticalSmells": { "type": "integer" },
            "severity": { "type": "string" },
            "violations": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "file": { "type": "string" },
                  "line": { "type": "integer" },
                  "type": { "type": "string" },
                  "description": { "type": "string" },
                  "severity": { "type": "string" }
                }
              }
            }
          }
        },
        "securityVulnerabilities": {
          "type": "object",
          "properties": {
            "totalVulnerabilities": { "type": "integer" },
            "criticalVulnerabilities": { "type": "integer" },
            "severity": { "type": "string" },
            "violations": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "file": { "type": "string" },
                  "line": { "type": "integer" },
                  "type": { "type": "string" },
                  "description": { "type": "string" },
                  "severity": { "type": "string" },
                  "cwe": { "type": "string" }
                }
              }
            }
          }
        }
      }
    }
  }
}