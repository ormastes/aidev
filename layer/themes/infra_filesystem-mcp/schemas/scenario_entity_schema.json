{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Scenario Entity Schema",
  "description": "Schema for entities created from scenario pushes",
  "type": "object",
  "required": ["id", "name", "type", "scenarioId", "nextEntities", "data", "createdAt", "updatedAt"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the entity",
      "pattern": "^[a-z]+_[0-9]+_[a-z0-9]+$"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for the entity",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "description": "Type of the entity",
      "enum": [
        "system_sequence_diagram",
        "system_test",
        "environment_test",
        "external_test",
        "integration_test",
        "coverage_check",
        "scenario"
      ]
    },
    "scenarioId": {
      "type": "string",
      "description": "ID of the parent scenario",
      "minLength": 1
    },
    "parentId": {
      "type": "string",
      "description": "ID of the direct parent entity (optional)"
    },
    "nextEntities": {
      "type": "array",
      "description": "List of entities that should be created next",
      "items": {
        "type": "object",
        "required": ["type", "required", "description"],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "system_sequence_diagram",
              "system_test",
              "environment_test",
              "external_test",
              "integration_test",
              "coverage_check",
              "scenario"
            ]
          },
          "id": {
            "type": "string",
            "description": "ID of the entity once created"
          },
          "required": {
            "type": "boolean",
            "description": "Whether this entity is required"
          },
          "description": {
            "type": "string",
            "description": "Description of what this entity does"
          }
        }
      }
    },
    "data": {
      "type": "object",
      "description": "Entity-specific data",
      "additionalProperties": true
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO timestamp when entity was created"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO timestamp when entity was last updated"
    }
  },
  "additionalProperties": false
}