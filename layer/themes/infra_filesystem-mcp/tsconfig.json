{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./gen/dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node", "jest"],
    "noImplicitAny": false
  },
  "include": [
    "pipe/**/*",
    "children/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "gen",
    "coverage",
    "tests"
  ]
}