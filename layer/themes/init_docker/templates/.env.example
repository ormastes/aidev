# Environment Configuration Template
# Copy to .env and customize for your deployment

# Application
NODE_ENV=production
PORT=3000
ENVIRONMENT=production

# Docker
IMAGE_NAME=aidev/app
VERSION=1.0.0
CONTAINER_NAME=app

# Deployment
REPLICAS=2
CPU_LIMIT=2
MEMORY_LIMIT=2G

# Networking
DOMAIN=localhost
SSL_ENABLED=true

# Volumes
DATA_PATH=./data
LOGS_PATH=./logs

# Database (if applicable)
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_NAME=appdb
DATABASE_USER=appuser
DATABASE_PASSWORD=changeme

# Redis (if applicable)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Monitoring
MONITORING_ENABLED=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
JWT_SECRET=your-secret-key-here
API_KEY=your-api-key-here

# External Services
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=

# Feature Flags
FEATURE_NEW_UI=false
FEATURE_BETA_API=false

# Development
DEBUG=false
WATCH_MODE=false
HOT_RELOAD=false