{
  "name": "ai-dev-portal-demo-theme",
  "version": "1.0.0",
  "description": "AI Development Portal Demo with E2E Testing",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "cd public && tsc",
    "build:watch": "npm run build:server:watch & npm run build:client:watch",
    "build:server:watch": "tsc --watch",
    "build:client:watch": "cd public && tsc --watch",
    "prebuild": "npm run clean",
    "clean": "rm -rf dist public/js/*.js public/js/*.js.map public/js/*.d.ts",
    "init-db": "ts-node init-db.ts",
    "init-db:postgres": "ts-node init-db-postgres.ts",
    "start": "node dist/server.js",
    "start:postgres": "node dist/server-postgres.js",
    "dev": "ts-node-dev --respawn --transpile-only server.ts",
    "dev:postgres": "ts-node-dev --respawn --transpile-only server-postgres.ts",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:db": "ts-node test-db-integrity.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "pg": "^8.11.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-session": "^1.17.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}