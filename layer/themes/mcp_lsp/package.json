{
  "name": "@aidev/mcp_lsp",
  "version": "2.0.0",
  "type": "module",
  "description": "Multi-instance Language Server Protocol to MCP bridge for TypeScript/JavaScript",
  "main": "gen/dist/pipe/index.js",
  "types": "gen/dist/pipe/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "bun test",
    "test:jest": "jest",
    "test:watch": "bun test --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf gen/dist dist coverage",
    "prepublishOnly": "bun run clean && bun run build",
    "setup": "./scripts/setup.sh",
    "verify": "bun run examples/verify-multi-instance.ts",
    "dev": "bun run src/index.ts",
    "start": "bun run src/index.ts"
  },
  "keywords": [
    "lsp",
    "language-server",
    "typescript",
    "javascript",
    "mcp",
    "code-intelligence"
  ],
  "author": "AI Dev Platform",
  "license": "MIT",
  "engines": {
    "node": ">= 18.0.0"
  },
  "dependencies": {
    "typescript-language-server": "^4.3.3",
    "vscode-jsonrpc": "^8.2.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-protocol": "^3.17.5",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "bun-types": "^1.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aidev-platform/themes.git",
    "directory": "layer/themes/mcp_lsp"
  }
}
