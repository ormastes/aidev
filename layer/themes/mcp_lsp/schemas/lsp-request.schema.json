{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LSP-MCP Request Schema",
  "description": "Schema for LSP-MCP tool requests",
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "method": { "const": "getTypeAtPosition" },
        "params": {
          "type": "object",
          "properties": {
            "file": { "type": "string", "description": "File path" },
            "line": { "type": "integer", "minimum": 0, "description": "Line number (0-based)" },
            "character": { "type": "integer", "minimum": 0, "description": "Character position (0-based)" }
          },
          "required": ["file", "line", "character"]
        }
      },
      "required": ["method", "params"]
    },
    {
      "type": "object",
      "properties": {
        "method": { "const": "goToDefinition" },
        "params": {
          "type": "object",
          "properties": {
            "file": { "type": "string" },
            "line": { "type": "integer", "minimum": 0 },
            "character": { "type": "integer", "minimum": 0 }
          },
          "required": ["file", "line", "character"]
        }
      },
      "required": ["method", "params"]
    },
    {
      "type": "object",
      "properties": {
        "method": { "const": "findReferences" },
        "params": {
          "type": "object",
          "properties": {
            "file": { "type": "string" },
            "line": { "type": "integer", "minimum": 0 },
            "character": { "type": "integer", "minimum": 0 }
          },
          "required": ["file", "line", "character"]
        }
      },
      "required": ["method", "params"]
    },
    {
      "type": "object",
      "properties": {
        "method": { "const": "getCompletions" },
        "params": {
          "type": "object",
          "properties": {
            "file": { "type": "string" },
            "line": { "type": "integer", "minimum": 0 },
            "character": { "type": "integer", "minimum": 0 }
          },
          "required": ["file", "line", "character"]
        }
      },
      "required": ["method", "params"]
    },
    {
      "type": "object",
      "properties": {
        "method": { "const": "getDocumentSymbols" },
        "params": {
          "type": "object",
          "properties": {
            "file": { "type": "string" }
          },
          "required": ["file"]
        }
      },
      "required": ["method", "params"]
    },
    {
      "type": "object",
      "properties": {
        "method": { "const": "getWorkspaceSymbols" },
        "params": {
          "type": "object",
          "properties": {
            "query": { "type": "string", "description": "Search query" }
          },
          "required": ["query"]
        }
      },
      "required": ["method", "params"]
    },
    {
      "type": "object",
      "properties": {
        "method": { "const": "rename" },
        "params": {
          "type": "object",
          "properties": {
            "file": { "type": "string" },
            "line": { "type": "integer", "minimum": 0 },
            "character": { "type": "integer", "minimum": 0 },
            "newName": { "type": "string", "minLength": 1 }
          },
          "required": ["file", "line", "character", "newName"]
        }
      },
      "required": ["method", "params"]
    }
  ]
}